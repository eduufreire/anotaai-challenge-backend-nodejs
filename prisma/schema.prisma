generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Product {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  price       Float

  category   Category @relation(fields: [categoryId], references: [id])
  categoryId String   @db.ObjectId

  @@map("product")
}

model Category {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  ownerId     String
  Product     Product[]

  @@map("category")
}
